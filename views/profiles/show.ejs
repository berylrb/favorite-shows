<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<%- include('../partials/nav') %>

<main>
  <section class="bg-dark text-secondary px-4 py-5 text-center">
    <% if (profile.avatar) { %>
      <img
        class="image-avi" 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s avatar"
      >
    <% } else {%>
      <img
        src="/images/icons/user.png" 
        alt="A placeholder avatar"
      >
    <% } %> 
    <h1 class="display-5 fw-bold text-white pt-2"><%= profile.name %></h1>
    <div class="container py-4">
      <table class="table table-dark table-striped align-middle">
        <tbody>
          <% if (user.profile.equals(profile._id)) { %>
            <tr>
              <td>Google Email:</td>
              <td><%= user.email %></td>
            </tr>
          <% } %>
          <tr>
            <td>Name:</td>
            <td><%= profile.name %></td>
          </tr>
          <tr>
            <td>Avatar URL:</td>
            <td>
              <a href="<%= profile.avatar %>">
                <%= profile.avatar.substring(0, 35) %>
                <% if (profile.avatar.length > 35) { %>
                ...
                <% } %>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% if (user.profile.equals(profile._id)) { %>
      <%# This is where we'll add the UI to edit a profile %> 
      <a 
        class="btn btn-warning"
        role="button" 
        href="/profiles/<%= profile._id %>/edit"
      >
        Edit Profile
      </a>
    <% } %>

    
  </section>
  <section class="bg-light pt-3">
<div class="container">
    <% shows.forEach(show => { %>
          <div class="wrapper">
              <% if (show.imageUrl) { %>
              <img class="poster" src="<%= show.imageUrl %>" alt="">
            <% } else { %>
              <img class="poster" src="https://images-we-got-pop.imgix.net/website/marketing/movie-placeholder.png?w=300&h=450&fit=clamp&auto=format,compress" alt="">
            <% } %>
            <div class="card-body">
              <p class="card-title fs-4 text-light"><%= show.name %></p>
              <a 
                href="/shows/<%= show.mdbId %>" 
                class="btn btn-primary"
              >
                Details
              </a>
            </div>
            </div>
          </div>
        </div>
      <% }) %>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>